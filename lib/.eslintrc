{
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": "airbnb-base",
  "rules": {
    // Code's accessibility matters
    "indent": [ "error", "tab" ],
    "no-tabs": ["error", { "allowIndentationTabs": true }],
    "max-len": "off",
    "object-curly-newline": ["error", { "multiline": true }],
    "padded-blocks": "off"
  },
  "overrides": [
    {
      "files": ["common/*.js"],
      "env": {
        "browser": true,
        "node": true
      }
    },
    {
      "files": ["browser/*.js"],
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": ["node/*.js"],
      "env": {
        "browser": false,
        "node": true
      }
    }
  ]
}
